<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    tools:context=".Login.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="275dp"
                    android:background="@drawable/red">
                </ImageView>
        </LinearLayout>

            <LinearLayout
                android:background="@drawable/bgcard"
                android:orientation="vertical"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingBottom="50dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bgcard"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal information"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"></TextView>

                    <EditText
                        android:id="@+id/txtNombreCcuidador"
                        android:layout_width="307dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bgeditext"
                        android:hint="Name"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:paddingLeft="18dp" />

                    <EditText
                        android:id="@+id/txtApellidoCcuidador"
                        android:layout_width="309dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:background="@drawable/bgeditext"
                        android:hint="Last Name"
                        android:paddingLeft="18dp" />

                    <EditText
                        android:id="@+id/txtEdadCcuidador"
                        android:layout_width="309dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:background="@drawable/bgeditext"
                        android:hint="Age"
                        android:paddingLeft="18dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account Data"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <EditText
                        android:id="@+id/txtCorreoCcuidador"
                        android:layout_width="310dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:background="@drawable/bgeditext"
                        android:hint="Mail"
                        android:paddingLeft="18dp" />

                    <EditText
                        android:id="@+id/txtClaveCcuidador"
                        android:layout_width="311dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:background="@drawable/bgeditext"
                        android:hint="Password"
                        android:inputType="text|textPassword"
                        android:paddingLeft="18dp" />
                </LinearLayout>
                <Button
                    android:id="@+id/btnCrearCuidadorA"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bgbtn"
                    android:text="Create Account"
                    android:textColor="#FFFEFE"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>