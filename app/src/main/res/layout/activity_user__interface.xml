<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BotonesManuales.User_Interface">

    <ScrollView
        android:id="@+id/fragmento_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:id="@+id/idDesconectar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="72dp"
                            android:background="@drawable/cerclebackground"
                            android:padding="5dp"
                            android:src="@drawable/cuidadora" />

                        <TextView
                            android:id="@+id/IdUsuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Elizabeth PÃ©rez"
                            android:textSize="@dimen/fab_let"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />



                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/bankcardId"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/idexpulsar1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/cerclebackgroundyellow"
                            android:padding="10dp"
                            android:src="@drawable/pasti" />

                        <TextView
                            android:layout_width="119dp"
                            android:textAlignment="center"
                            android:text="Medicine Box 1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="@dimen/fab_let"
                            android:textColor="@android:color/black"

                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/secondary_text" />

                        <TextView
                            android:layout_width="119dp"
                            android:textAlignment="center"
                            android:text="Katherine Jines"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:textSize="@dimen/fab_let"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/idexpulsar2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/cerclebackgroundorange"
                            android:padding="10dp"
                            android:src="@drawable/pasti" />

                        <TextView
                            android:layout_width="119dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Medicine Box 2"
                            android:textSize="@dimen/fab_let"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/secondary_text" />

                        <TextView
                            android:layout_width="119dp"
                            android:textAlignment="center"
                            android:text="Diana       Jines"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/fab_let"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/idexpulsar3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/cerclebackgroundred"
                            android:padding="10dp"
                            android:src="@drawable/pasti" />

                        <TextView
                            android:layout_width="119dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Medicine Box 3"
                            android:textSize="@dimen/fab_let"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/secondary_text" />

                        <TextView
                            android:layout_width="130dp"
                            android:textAlignment="center"
                            android:text="Roberto Jines"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/fab_let"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/idexpulsar4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/cerclebackgroundblue"
                            android:padding="10dp"
                            android:src="@drawable/pasti" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_width="119dp"
                            android:textAlignment="center"
                            android:text="Medicine Box 4"
                            android:textSize="@dimen/fab_let"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:background="@color/secondary_text" />

                        <TextView
                            android:layout_width="119dp"
                            android:textAlignment="center"
                            android:text="Marilu Jines"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/fab_let"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <TextView
                        android:id="@+id/idBuffer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="340dp"
                        android:text="Dato:" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>